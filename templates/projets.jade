extends base
block content
  .lead!= contents
  .projects.row
  - projects = (lang === 'en')?collections.projects:collections.projets
  each project in projects
    .row
      .col-xs-4.col-md-3.screenshots-container
        a(href=project.url)
          img.screenshot-thumbnail(src='/images/'+project.screenshot)
      .col-xs-8.col-md-9
        h3!= project.title
        div!= project.contents
        a.icon-earth(href=project.url)!=" "+project.title
      


