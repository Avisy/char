extends base
block content
  .lead!= contents
  .projects.row
    // h3 >> Projets (plus ou moins s√©rieux)
  each project in collections.projects
    .row
      .col-md-3.screenshots-container
        a(href=project.url)
          img.screenshot-thumbnail(src='images/'+project.screenshot)
      .col-md-9
        h3!= project.title
        div!= project.contents
        a(href=project.url)!=project.url


